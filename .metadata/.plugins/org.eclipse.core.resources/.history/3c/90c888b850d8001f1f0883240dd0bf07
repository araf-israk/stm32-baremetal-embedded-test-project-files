#include <stdio.h>
#include <stdint.h>
#include "stm32f4xx.h"
#include "uart.h"
#include "gy521.h"

#define GPIOCEN (1U<<2)
#define PIN13 	(1U<<13)

#define LED_PIN PIN13

extern uint8_t data_rec[6];

char d1;

int main(void){
	I2C1_init();

	I2C1_byteRead(DEVICE_ADDR, 0x75, &d1);
	I2C1_byteRead(DEVICE_ADDR, 0x3B,(char*)&data_rec[0]);
	I2C1_byteRead(DEVICE_ADDR, 0x3C,(char*)&data_rec[1]);
	I2C1_byteRead(DEVICE_ADDR, 0x3D,(char*)&data_rec[1]);
	I2C1_byteRead(DEVICE_ADDR, 0x3E,(char*)&data_rec[1]);
	I2C1_byteRead(DEVICE_ADDR, 0x3F,(char*)&data_rec[1]);
	I2C1_byteRead(DEVICE_ADDR, 0x40,(char*)&data_rec[1]);
	while(1){
	}
}
