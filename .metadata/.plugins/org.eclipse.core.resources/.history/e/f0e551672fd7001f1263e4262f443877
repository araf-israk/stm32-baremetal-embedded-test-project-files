#include "stm32f4xx.h"

#define GPIOAEN (1U<<0)
#define GPIOCEN (1U<<2)

#define PIN0 	(1U<<0)
#define PIN5 	(1U<<5)
#define PIN13 	(1U<<13)

#define LED_PIN PIN13
#define BTN_PIN PIN0

int main(void){

	/* Enable clock access to GPIOA and GPIOC */
	RCC->AHB1ENR |= GPIOAEN;
	RCC->AHB1ENR |= GPIOCEN;

	/* Set PA0 as input pin */
	GPIOA->MODER &= ~(1U<<0);
	GPIOA->MODER &= ~(1U<<1);

	/* Set PC13 as output pin */
	GPIOC->MODER |= (1U<<26);
	GPIOC->MODER &= ~(1U<<27);

	while(1){
		GPIOC->BSRR |= (1U<<13);
		for(int i = 0; i<1000000; i++){

		}

		GPIOC->BSRR |= (1U<<29);
		for(int i = 0; i<100000; i++){

		}
	}
}
